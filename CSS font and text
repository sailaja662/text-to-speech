/* Different Text Effects */ 
.large-text { 
font-size: 24px; 
} 
.bold-text { 
font-weight: bold; 
} 
.italic-text { 
font-style: italic; 
} 
 
        .underline-text { 
            text-decoration: underline; 
        } 
 
        .uppercase-text { 
            text-transform: uppercase; 
        } 
 
        .capitalize-text { 
            text-transform: capitalize; 
        } 
 
        .center-text { 
            text-align: center; 
        } 
 
        .justify-text { 
            text-align: justify; 
        } 
    </style> 
